<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="topratedmovie"
            type="com.moises.movielist.domain.toprated.model.TopRatedMovie"/>

    </data>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/radius_card"
        android:layout_margin="@dimen/margin_card"
        android:elevation="@dimen/elevation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{topratedmovie.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    app:srcCompat="@drawable/ic_home_black_24dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@{topratedmovie.image}"
                    app:imageUrl="@{topratedmovie.image}"
                    app:placeholder="@{@drawable/imagenoavailable}"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="@{topratedmovie.overview}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="?android:attr/textColorSecondary"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>